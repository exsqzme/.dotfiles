alias pjson="python -mjson.tool"
alias xsc="xclip -selection clipboard"

alias cl=clear
alias ll="ls -lshA"

alias ipinfo="curl ipinfo.io"
alias weather="curl wttr.in"

alias sqz="cd $EXSQZME"
alias dotFileInstall="$DOTFILES/install"
alias bp="dotFileInstall && source ~/.zshrc"

alias ebp="$VIM $DOTFILES/zsh/.zsh_profile"
alias etc="$VIM $DOTFILES/tmux/.tmux.conf"
alias evrc="$VIM $DOTFILES/vim/.vimrc"
alias enrc="nvim $DOTFILES/nvim/.config/nvim/init.vim --cmd \"cd $DOTFILES/nvim/.config/nvim/init.vim\""
alias eirc="nvim $DOTFILES/i3/.config/i3/i3config"


