# Detect the platform (similar to $OSTYPE)
OS="`uname`"
case $OS in
  "Linux")
    export OS="Linux"
    alias ls="ls --color=auto"
    ;;
  "FreeBSD")
    export OS="FreeBSD"
    alias ls="ls -G"
    ;;
  "WindowsNT")
    export OS="Windows"
    ;;
  "Darwin") 
    export OS="Mac"
    alias ls="ls -G"
    ;;
  "SunOS")
    export OS="Solaris"
    ;;
  "AIX")
    export OS="Unknown"
    ;;
  *)
    export OS="Unknown"
    ;;
esac

EXSQZME=$HOME/dev/github.com/exsqzme
CONFIGS=$EXSQZME/.dotfiles/myconfig
DOTFILES=$EXSQZME/.dotfiles
VIM="nvim"

if [ -d $CONFIGS ]; then
  for file in $CONFIGS/*; do
      source $file
#    . "$file"
  done
fi

addToPathFront $HOME/.local/bin
